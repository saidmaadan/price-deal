enum Permission {
  ADMIN
  USER
  SELLER
  PRODUCTCREATE
  PRODUCTUPDATE
  PRODUCTDELETE
  PERMISSIONUPDATE
}

type User {
  id: ID! @unique
  name: String!
  email: String! @unique
  password: String!
  resetToken: String
  resetTokenExpiry: Float
  permissions: [Permission]
}

type Product{
  id: ID! @unique
  title: String!
  description: String!
  image: String
  largeImage: String
  originalPrice: Int!
  discount: String
  price: Int!
  createdAt: DateTime!
  updatedAt: DateTime!
  # user: User!

}
